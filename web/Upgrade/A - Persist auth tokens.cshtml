@using WebMatrix.Data;
@{
    var maxLength = 0;
    using (var db = new LcDatabase())
    {
        var all = db.Query(@"
            SELECT  UserId, Password
            FROM    webpages_Membership
        ");
        foreach(var user in all)
        {
            var token = LcEncryptor.ConvertForURL(LcEncryptor.Encrypt(((int)user.UserId).ToString() + "::::" + (string)user.Password));
            var userAgent = "unknow";
            var userAddress = "";
            db.Execute(@"INSERT INTO authorizations
                (Token, UserID, CreatedDate, ClientAddress, UserAgent)
                VALUES (@0, @1, @2, @3, @4)",
                token, user.UserId, DateTimeOffset.Now, userAddress, userAgent
            );
            if (token.Length > maxLength)
            {
                maxLength = token.Length;
            }
        }
    }
}

