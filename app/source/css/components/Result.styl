/**
    Represents a SearchResultsPreview item.
    Created to be used for each meaningful element inside an autocomplete dropdown.
 */
// TODO Better naming
.Result {
    clearfix();
    border-bottom: 1px solid $gray-background;
    display: block;
    height: auto;
    clear: both;
    padding: 15px;

    .Result-info {
        width: 75%;
        float: left;
        padding-left: 15px;
    }

    .Result-name {
        color: $gray-dark;
        font-size: 15px;
        // Height paired with the usual button placed at right (thats why we set a percentage width at 'info')
        // that way it looks vertically centered with the button, both when there is description and when not.
        // Height of a usual .btn class
        line-height: 34px;
    }

    .Result-count {
        font-size: 15px;
        color: $gray;
    }

    .Result-description {
        display: block;
        font-size: 12px;
        color: $gray;
        overflow: hidden;
    }

    .btn-inline {
        width: 20%;
        float: right;
        margin-right: auto;

        // We are using the btn class at this element too to simulate
        // it, when is not one and what we have is a link wrapping this
        // and other content. We need to disabled the focus,hover,active
        // state styles for a good reason, and still being accessible:
        // prevent confusion about available link/button to click;
        // the area where this fake button is, is already clickable, focusable
        // and hightlighed
        &:active,
        &:focus,
        &:hover {
            outline: none !important;
        }
    }
}

.Result:hover {
    background-color: $gray-background;
}

a.Result {
    cursor: pointer;
}
