/**
 *   Services listing styles
 */

@import '../../../css/utils/styleguideVars.styl';

[data-activity=service-professional-services] {
    .Prompt {
        font-size: $font-size-base * 1.4
        padding-left: $container-padding-left

        @media $mediaMinSm {
            font-size: $font-size-base * 1.8 /* 25.2 with 14px base */
            padding-left: 0
        }
    }

    .ServiceListGroup {
        .ServiceListGroup-title {
            font-size: $font-size-base * 1.2
            padding-left: $container-padding-left

            @media $mediaMinSm {
                font-size: $font-size-base * 1.5 /* 21 with 14px base*/
                padding-left: 0
            }
        }
    }
}
