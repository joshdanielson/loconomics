/**
    Blog activity styles.
**/
@import '../../../css/utils/styleguideVars.styl';

[data-activity=blog] {
    // Ensure contents don't create horizontal scroll
    .container {
        background: $gray-background;
        overflow: hidden;
        // Multiline for large words, like links. Seems only needed for Webkit;
        // with and without it, Firefox do it similar and slightly better by default
        word-wrap: break-word;
        padding: 30px;

        h1 {
            text-align: center;
        }

        .nav
        &.navbar-nav {
            margin-top: 30px;
            text-align: right;
        }
    }
}
