/**
 * Dashboard styles
 */
@import '../../../css/utils/styleguideVars.styl';

[data-activity=dashboard] {
    #dashboardNextBooking {
        // Minimum height just to reduce the flickering effect
        // between the loading phase and filling in data:
        min-height: 20px;
        // Overflow needed so internal margins don't collapse because of min-height
        overflow: hidden;
    }

    #dashboardCurrentAppointment {
        h4 {
            display: inline-block;
            padding: 1em;
            margin: 0;
            font-weight: bold;
            color: $gray;
        }
        .btn {
            float: right;
            margin: .65em;
        }
    }
    .bookNow-link {
      color: $brand-secondary;
      text-decoration: none;
      &:hover,
      &:focus{
        color: $brand-secondary-dark !important;
      }
    }
}
