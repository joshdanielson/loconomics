/** Appointment activity styles */
@import '../../../css/utils/styleguideVars.styl';
@import '../../../css/components/AppointmentCard.styl'

[data-activity=appointment] {

    #appointment-toolbar {
        // Needs positioning to avoid an overlay problem with the Cards below
        position: relative;
        z-index: 9999;

        // Equal size for buttons, keeping alignment even when switch to edit mode
        .btn {
            height: 34px;
            line-height: 20px;
        }
    }

    #appointment-titleBar {
        @media $mediaMaxSm {
            margin-top: 15px;
        }
    }

    &.in-edit {

        .CardsDeck-dots,
        .CalendarDateHeader-switch {
            visibility: hidden;
        }

        .ActivityTitle-action {
            pointer-events: none;
            visibility: hidden;
        }
    }
}
